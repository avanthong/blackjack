package com.blackjack.lib;

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

class CardTest {
    @Test
    void testGetSuit() {
        Card card = new Card(Card.Suit.CLUBS, 1);
        assertEquals(Card.Suit.CLUBS, card.getSuit());
    }

    @Test
    void testSetSuit() {
        Card card = new Card(Card.Suit.CLUBS, 1);
        card.setSuit(Card.Suit.HEARTS);
        assertEquals(Card.Suit.HEARTS, card.getSuit());
    }

    @Test
    void testGetValue() {
        Card card = new Card(Card.Suit.CLUBS, 1);
        assertEquals(1, card.getValue());
    }

    @Test
    void testSetValue() {
        Card card = new Card(Card.Suit.CLUBS, 1);
        card.setValue(5);
        assertEquals(5, card.getValue());
        assertThrows(IllegalArgumentException.class, card.setValue(15));
    }
}